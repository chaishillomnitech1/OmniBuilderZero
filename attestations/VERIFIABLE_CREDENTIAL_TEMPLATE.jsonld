{
  "@context": [
    "https://www.w3.org/2018/credentials/v1",
    "https://www.w3.org/2018/credentials/examples/v1",
    {
      "@vocab": "https://omnitech1.io/credentials/v1#",
      "otap": "https://omnitech1.io/credentials/v1#",
      "schema": "https://schema.org/",
      "ShahadahAttestation": "otap:ShahadahAttestation",
      "consentGiven": "otap:consentGiven",
      "consentTimestamp": "otap:consentTimestamp",
      "attestationType": "otap:attestationType",
      "witnessCount": "otap:witnessCount",
      "witnessIds": "otap:witnessIds",
      "declarationLanguage": "otap:declarationLanguage",
      "ascendancyId": "otap:ascendancyId",
      "ethicalNote": "otap:ethicalNote"
    }
  ],
  "id": "https://omnitech1.io/credentials/shahadah/{{CREDENTIAL_ID}}",
  "type": [
    "VerifiableCredential",
    "ShahadahAttestation"
  ],
  "name": "Shahadah Declaration Attestation",
  "description": "A verifiable credential attesting to a voluntary declaration of faith (Shahadah). This attestation records the human action of bearing witness and does not represent a software belief or judgment.",
  "issuer": {
    "id": "did:web:attestor.omnitech1.io",
    "name": "{{ISSUER_NAME}}",
    "description": "Authorized witness for faith attestations within the OmniTech Ascendancy Protocol"
  },
  "issuanceDate": "{{ISSUANCE_DATE}}",
  "expirationDate": "{{EXPIRATION_DATE}}",
  "credentialSubject": {
    "id": "did:ethr:scroll:{{SUBJECT_ADDRESS}}",
    "ascendancyId": "{{ASCENDANCY_ID_TOKEN}}",
    "attestationType": "shahadah",
    "declaration": {
      "type": "Shahadah",
      "language": "{{DECLARATION_LANGUAGE}}",
      "transliteration": "Ash-hadu an la ilaha illa Allah, wa ash-hadu anna Muhammadan rasul Allah",
      "translation": "I bear witness that there is no deity but God, and I bear witness that Muhammad is the messenger of God"
    },
    "consent": {
      "consentGiven": true,
      "consentTimestamp": "{{CONSENT_TIMESTAMP}}",
      "consentMethod": "explicit_acknowledgment",
      "informedConsentStatement": "The subject has been informed of the nature, significance, and permanence of this attestation and has voluntarily chosen to proceed."
    },
    "witnesses": {
      "witnessCount": "{{WITNESS_COUNT}}",
      "witnessIds": [
        "{{WITNESS_1_DID}}",
        "{{WITNESS_2_DID}}"
      ],
      "witnessStatement": "We bear witness that the subject made this declaration voluntarily and with understanding."
    },
    "ethicalNote": "This attestation records a human declaration of faith. It is a documentary record of a personal spiritual commitment made by the credential subject. The technology infrastructure facilitates recording and verification but does not evaluate, judge, or make any claims about the sincerity, validity, or theological implications of this declaration. Faith is a deeply personal matter between the individual and the Divine."
  },
  "credentialStatus": {
    "id": "https://omnitech1.io/credentials/status/{{STATUS_LIST_ID}}#{{STATUS_INDEX}}",
    "type": "StatusList2021Entry",
    "statusPurpose": "revocation",
    "statusListIndex": "{{STATUS_INDEX}}",
    "statusListCredential": "https://omnitech1.io/credentials/status/{{STATUS_LIST_ID}}"
  },
  "proof": {
    "type": "Ed25519Signature2020",
    "created": "{{PROOF_CREATED_TIMESTAMP}}",
    "verificationMethod": "did:web:attestor.omnitech1.io#signing-key-1",
    "proofPurpose": "assertionMethod",
    "proofValue": "{{SIGNATURE_VALUE}}"
  },
  "_templateMetadata": {
    "version": "1.0.0",
    "templateId": "shahadah-attestation-v1",
    "instructions": {
      "CREDENTIAL_ID": "Generate a unique UUID for this credential",
      "ISSUER_NAME": "Name of the authorized witness/issuer",
      "ISSUANCE_DATE": "ISO 8601 datetime of credential issuance",
      "EXPIRATION_DATE": "Optional: ISO 8601 datetime of credential expiration (may be omitted for permanent attestations)",
      "SUBJECT_ADDRESS": "Ethereum address of the credential subject",
      "ASCENDANCY_ID_TOKEN": "AscendancyID NFT token ID linked to this subject",
      "DECLARATION_LANGUAGE": "Language of the original declaration (e.g., 'ar' for Arabic, 'en' for English)",
      "CONSENT_TIMESTAMP": "ISO 8601 datetime when consent was given",
      "WITNESS_COUNT": "Number of witnesses present (minimum 2 recommended)",
      "WITNESS_1_DID": "DID of the first witness",
      "WITNESS_2_DID": "DID of the second witness",
      "STATUS_LIST_ID": "ID of the status list credential for revocation checking",
      "STATUS_INDEX": "Index in the status list for this credential",
      "PROOF_CREATED_TIMESTAMP": "ISO 8601 datetime of proof creation",
      "SIGNATURE_VALUE": "Base58-encoded Ed25519 signature"
    },
    "processingNotes": [
      "Remove _templateMetadata before issuing the credential",
      "All timestamps must be in ISO 8601 format with timezone",
      "The proof section should be generated by a signing service using proper key management",
      "Witnesses should be verified as authorized before accepting their attestation",
      "Subject consent must be obtained and recorded before credential issuance"
    ],
    "ethicalGuidelines": [
      "This attestation represents a sacred declaration and must be treated with utmost respect",
      "Never issue this credential without explicit, informed consent from the subject",
      "Witnesses must be present and authorized to attest to the declaration",
      "The system does not judge or evaluate faith - it only records human attestations",
      "Revocation should only occur at the subject's request or for documented fraud"
    ]
  }
}
